<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.led.led.patternControl">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pattern Control"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonApply"
        android:layout_width="218dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Apply" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="100px"
        android:layout_marginEnd="20px"
        android:entries="@array/pattern_list"
        android:prompt="@string/pattern_prompt" />

    <Switch
        android:id="@+id/switchReverse"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="120px"
        android:text="Reverse"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/switchOpposite"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchReverse"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="50px"
        android:text="Opposite"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/switchHalf"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchOpposite"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="50px"
        android:text="Half"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerChaseNumber"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchOpposite"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="50px"
        android:entries="@array/chase_number_list"
        android:prompt="@string/chase_number_prompt"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinnerStrobeMode"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20px"
        android:layout_marginTop="120px"
        android:entries="@array/strobe_mode_list"
        android:prompt="@string/strobe_mode_prompt"
        android:visibility="invisible" />

</RelativeLayout>